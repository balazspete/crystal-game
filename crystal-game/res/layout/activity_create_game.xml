<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/GameDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="Game name" />

    <Button
        android:id="@+id/btnGameLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/GameDuration"
        android:layout_marginTop="16dp"
        android:text="Game Location" />

    <Button
        android:id="@+id/btnResetCreateGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnGameLocation"
        android:layout_marginTop="16dp"
        android:text="Reset" />

    <Button
        android:id="@+id/btnSubmitCreateGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnResetCreateGame"
        android:layout_alignBottom="@+id/btnResetCreateGame"
        android:layout_alignParentRight="true"
        android:text="Submit" />

</RelativeLayout>
